<h1 align="center">people you are follwing</h1>

<div align="center">
  <% @stars.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
         <h3>   <%= link_to user.username.upcase, user_path(user) %>   
             </h3>
            <% if logged_in? %>
              <%if ((Follow.all.where(follower_id:current_user.id).where(star_id:user.id).count)>0)%>
                <%= link_to 'unfollow', ('/unfollow/'+user.id.to_s)%>
                <%else%>
                <%= link_to 'Follow', ('/follow/'+user.id.to_s)%>
                <%end%>
            <%end%>
          </li>
        </div>
      </div>
    </ul>
  <% end %>
</div>